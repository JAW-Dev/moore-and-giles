<footer class="site-footer" itemscope itemtype="http://schema.org/WPFooter">
	{{function('tha_footer_top')}}
		<div class="wrap">
			<div class="social-sign-up-wrap">
				{% include "components/sign-up.twig" with {
					"type": "footer"
				} %}

				{% include "components/social/social.twig" with {
					"items": social
				} %}
			</div>

			<hr class="divider" />

            {% include "components/nav/nav.twig" with {
				"name": "footer-mobile",
				"nav": nav.footer_mobile
			} %}

			<hr class="divider" />

			<div class="info-nav-wrap">
				<div class="info-container">
					<h3 class="info-title">We are a Leather Company.</h3>
					<div class="information wysiwyg-content">
						{{ footer.information|wpautop }}
					</div>
				</div>
                {% include "components/nav/nav.twig" with {
					"name": "footer-desktop",
					"nav": nav.footer_desktop
				} %}
			</div>
		</div>
		<div class="footer__disclaimer">
			<div class="wrap">
				<div class="footer__copyright">
					&copy; {{ year() }} {{ bloginfo_name() }} All Rights Reserved
				</div>
				<div class="footer__disclaimer-nav">
					{% include "components/nav/nav.twig" with {
						"name": "footer-disclaimer",
						"nav": nav.footer_disclaimer
					} %}
				</div>
			</div>
		</div>
	{{function('tha_footer_bottom')}}
</footer>
