{% embed 'layouts/50-50.twig' %}
    {% block content_left %}
        <div class="content-wrap">
            <h3 class="title">
                {{ content_left.title }}
            </h3>
            <div class="text">
                {{ content_left.text }}
            </div>
            <a href="{{ content_left.button_link }}" class="button button__small">
                {{ content_left.button_text }}
            </a>
        </div>
    {% endblock %}
    {% block content_right %}
        <div class="content-wrap">
            <h3 class="title">
                {{ content_right.title }}
            </h3>
            <div class="text">
                {{ content_right.text }}
            </div>
            <a href="{{ content_right.button_link }}" class="button button__small">
                {{ content_right.button_text }}
            </a>
        </div>
    {% endblock %}
{% endembed %}
