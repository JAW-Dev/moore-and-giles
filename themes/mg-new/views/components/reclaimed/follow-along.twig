{% if( post.get_field('follow_section_title') or post.get_field('follow_hashtag_text') or post.get_field('follow_instagram_link') ) %}
    {% set section_title = post.get_field('follow_section_title') %}
    {% set hastag_text = post.get_field('follow_hashtag_text') %}
    {% set ig_link = post.get_field('follow_instagram_link') %}
    {% set first_img = post.get_field('follow_first_image') %}
    {% set second_img = post.get_field('follow_second_image') %}
    <section class="follow-along">
            <div class="wrap p0">
                <div class="follow-along-inner">
                    <div class="first">
                        {% if( first_img ) %}
                            {% set first_img_html = first_img | get_timber_image_responsive('large') %}

                            <img class="display-block" {{ first_img_html }}>
                        {% endif %}

                        {% if( section_title ) %}
                            <h2 class="section-title mobile ff-roboto-slab">{{ section_title }}</h2>
                        {% endif %}

                        {% if( hastag_text ) %}
                            <div class="hashtag ff-roboto-slab">{{ hastag_text }}</div>
                        {% endif %}

                        {% if( ig_link ) %}
                            <div class="button-wrap">
                                <div class="ig-svg-wrap">
                                    <a target="_blank" href="{{ ig_link.url }}">
