                                    </a>
                                </div>
                                <a target="_blank" href="{{ ig_link.url }}" class="button rounded wide">{{ ig_link.title }}</a>
                            </div>
                        {% endif %}
                    </div>
                    <div class="second">
                        {% if( section_title ) %}
                            <h2 class="section-title desktop ff-roboto-slab">{{ section_title }}</h2>
                        {% endif %}

                        {% if( second_img ) %}
                            {% set second_img_html = second_img | get_timber_image_responsive('large') %}

                            <img class="display-block" {{ second_img_html }}>
                        {% endif %}
                    </div>
                </div>
            </div>

    </section>
{% endif %}
